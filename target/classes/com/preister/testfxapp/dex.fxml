<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.preister.testfxapp.DexController"
            style="-fx-background-color: linear-gradient(to bottom, #ff4d4d, #cc0000); -fx-border-color: #000000; -fx-border-width: 4; -fx-background-radius: 10; -fx-border-radius: 10;">

   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
         <content>
            <StackPane style="-fx-background-color: linear-gradient(to bottom, #b3e5ff, #80d8ff, #4fc3f7, #29b6f6); -fx-background-radius: 10;">
               <GridPane fx:id="dexGrid" hgap="20" vgap="20" alignment="CENTER" style="-fx-background-color: transparent;">
                  <padding>
                     <Insets top="20" right="20" bottom="20" left="20"/>
                  </padding>
               </GridPane>
            </StackPane>
         </content>
      </ScrollPane>
   </center>

   <bottom>
      <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="20" bottom="10"/>
         </padding>
         <Button fx:id="homeButton" text="← Back" onAction="#navHome"
                 style="-fx-background-color: #0073e6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8; -fx-font-weight: bold;"/>
      </HBox>
   </bottom>
</BorderPane>